@page "/library"
@using BookStore.Client.Services
@using BookStore.Core.DTOs

@inject ProfileService ProfileService
@inject NavigationManager NavManager
<div class="container mt-4 mb-5">
    
    <div class="d-flex align-items-center mb-4">
        <button class="btn btn-outline-light me-3" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Назад
        </button>
        <h2 class="text-white m-0">Моя бібліотека</h2>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (!books.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-book display-1"></i>
            <h4 class="mt-3">Ваша бібліотека порожня</h4>
            <p>Тут з'являться ваші куплені книги після завершення замовлення.</p>
            <button class="btn btn-primary mt-2" @onclick='() => NavManager.NavigateTo("/")'>
                Перейти до каталогу
            </button>
        </div>
    }
    else
    {
        <div class="library-grid">
            @foreach (var book in books)
            {
                <div class="library-card">
                    
                    <div class="img-wrapper" @onclick='() => NavManager.NavigateTo($"/book/{book.BookID}")'>
                        <img src="@book.ImageUrl" onerror="this.src='/images/no-image.png'" alt="@book.Title" />
                        
                        <span class="badge-purchased">
                            <i class="bi bi-check-circle-fill"></i> Куплено
                        </span>
                    </div>

                    <div class="info-wrapper">
                        <h5 class="book-title" title="@book.Title">@book.Title</h5>
                        <p class="book-author">@book.Author</p>
                        
                        <p class="purchase-date">
                            Придбано: @book.PurchaseDate.ToLocalTime().ToString("dd.MM.yyyy")
                        </p>

                        <div class="actions-row">
                            <button class="btn-read">
                                <i class="bi bi-book-half me-2"></i> Читати
                            </button>
                            
                            <button class="btn-download" title="Завантажити EPUB/PDF">
                                <i class="bi bi-download"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<LibraryBookDto> books = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            books = await ProfileService.GetMyLibraryAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private void GoBack() => NavManager.NavigateTo("/");

}