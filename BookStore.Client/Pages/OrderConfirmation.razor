@page "/order-confirmation/{OrderId:int}"
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>Результат оплати</PageTitle>

<div class="fixed-top w-100 h-100 d-flex flex-column justify-content-center align-items-center text-center" 
     style="z-index: 2000; background-color: rgba(0,0,0,0.5);"> @if (isLoading)
    {
        <div class="py-5 text-white">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Завантаження...</span>
            </div>
            <h3 class="mt-3">Перевіряємо статус замовлення...</h3>
        </div>
    }
    else if (isSuccess)
    {
        <div class="card shadow-lg border-success p-5 mx-3" style="max-width: 500px; width: 100%; background-color: #fff;">
            <div class="text-success mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
            </div>
            <h1 class="display-5">Дякуємо!</h1>
            <p class="lead">Ваше замовлення <strong>№@OrderId</strong> успішно прийнято.</p>
            <hr>
            <button class="btn btn-primary btn-lg w-100" @onclick="GoHome">На головну</button>
        </div>
    }
    else
    {
        <div class="card shadow-lg border-danger p-5 mx-3" style="max-width: 500px; width: 100%; background-color: #fff; color: #dc3545;">
            <div class="mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8 7.293 5.354 4.646z"/>
                </svg>
            </div>
            <h1 class="display-5">Оплата не пройшла</h1>
            <p class="lead">Статус: <strong>@paymentStatus</strong></p>
            <p>Ви скасували оплату або сталася помилка.</p>
            <hr>
            <button class="btn btn-secondary btn-lg w-100" @onclick="GoHome">На головну</button>
        </div>
    }
</div>

@code {
    [Parameter] public int OrderId { get; set; }

    private bool isLoading = true;
    private bool isSuccess = false;
    private string paymentStatus = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Стукаємо на наш контролер
            var response = await Http.GetFromJsonAsync<PaymentStatusResponse>($"api/payment/check-status/{OrderId}");
            
            paymentStatus = response?.Status ?? "unknown";

            // Перевіряємо статус
            if (paymentStatus == "success" || paymentStatus == "sandbox" || paymentStatus == "wait_accept")
            {
                isSuccess = true;
            }
            else
            {
                // failure, error, reversed (скасовано)
                isSuccess = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
            isSuccess = true; 
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoHome() => NavManager.NavigateTo("/");
    
    

    public class PaymentStatusResponse
    {
        public string Status { get; set; } = "";
    }
}