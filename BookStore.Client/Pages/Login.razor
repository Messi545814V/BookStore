@page "/login"
@using BookStore.Client.Services
@using BookStore.Core.DTOs
@using BookStore.Core.Entities

@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject CartService CartService 

<PageTitle>Вхід</PageTitle>

<h3>Вхід</h3>

<div class="card">
    <div class="card-body">
        <EditForm Model="loginDto" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
        
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
        
            <div class="form-group mb-3">
                <label>Ім'я користувача</label>
                <InputText class="form-control" @bind-Value="loginDto.Username" />
                <ValidationMessage For="@(() => loginDto.Username)" />
            </div>
            
            <div class="form-group mb-3">
                <label>Пароль</label>
                @* Додав type="password", щоб приховати символи *@
                <InputText type="password" class="form-control" @bind-Value="loginDto.Password" />
                <ValidationMessage For="@(() => loginDto.Password)" />
            </div>
            
            <button type="submit" class="btn btn-primary mt-3">Увійти</button>
        </EditForm>
        
        <div class="mt-3">
            <span>Не маєте акаунту?</span>
            <a href="/register">Зареєструватися</a>
        </div>
    </div>
</div>

@code {
    private LoginDto loginDto = new();
    private string? errorMessage;
    
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private async Task HandleLogin()
    {
        errorMessage = null;
        var success = await AuthService.LoginAsync(loginDto);
        
        if (success)
        {
            // 1. Синхронізуємо кошик (Guest -> User)
            await CartService.SyncGuestCartToApi();

            // 2. Перевіряємо, куди перенаправити користувача
            var destination = !string.IsNullOrEmpty(ReturnUrl) ? ReturnUrl : "/";
            
            NavigationManager.NavigateTo(destination);
        }
        else
        {
            errorMessage = "Неправильне ім'я користувача або пароль.";
        }
    }
}