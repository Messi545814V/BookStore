@page "/WaitingListPage"
@using BookStore.Client.Services
@using BookStore.Core.DTOs
@inject WaitingListService WaitingListService
@inject CartService CartService
@inject NavigationManager NavManager
<div class="container mt-4 mb-5">
    
    <div class="d-flex align-items-center mb-4">
        <button class="btn btn-outline-light me-3" @onclick="GoToBack">
            <i class="bi bi-arrow-left"></i> Назад
        </button>
        <h2 class="text-white m-0">Товари в очікуванні</h2>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
    }
    else if (!items.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-clock-history display-1"></i>
            <h4 class="mt-3">Список очікування порожній</h4>
            <p>Тут будуть книги, появу яких ви чекаєте.</p>
        </div>
    }
    else
    {
        <div class="waiting-grid">
            @foreach (var item in items)
            {
                <div class="waiting-card">
                    <button class="delete-btn" @onclick="() => RemoveCart(item.BookId)" title="Не чекати">
                        <i class="bi bi-x-lg"></i>
                    </button>

                    <div class="img-wrapper" @onclick='() => NavManager.NavigateTo($"/book/{item.BookId}")'>
                        <img src="@item.ImageUrl" onerror="this.src='/images/no-image.png'" />
                        
                        @if (item.IsAvailable)
                        {
                            <span class="badge-available">З'явився!</span>
                        }
                    </div>

                    <div class="info-wrapper">
                        <h5 class="book-title">@item.Title</h5>
                        <p class="book-author">@item.Author</p>
                        
                        <div class="mt-auto pt-3 border-top border-secondary d-flex justify-content-between align-items-center">
                            <span class="price">@item.Price ₴</span>
                            
                            @if (item.IsAvailable)
                            {
                                <button class="btn btn-sm btn-success fw-bold" @onclick="() => AddToCart(item)">
                                    Купити
                                </button>
                            }
                            else
                            {
                                <span class="text-warning small">
                                    <i class="bi bi-hourglass-split"></i> Очікується
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<WaitingItemDto> items = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            items = await WaitingListService.GetWaitingListAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RemoveCart(int id)
    {
        await WaitingListService.ToggleAsync(id);
        items.RemoveAll(w => w.BookId == id);
    }

    private async Task AddToCart(WaitingItemDto item)
    {
        CartService.AddToCart(new BookSummaryDto 
        { 
            Id = item.BookId, Title = item.Title, Price = item.Price, ImageUrl = item.ImageUrl 
        });
    }

    private void GoToBack() => NavManager.NavigateTo("/");

}